{{> header}}

<div>
  <div class="container">
      <div class="row">
          <h1 style="text-align: center;" class="col-12">Add a new comment to {{ campground.name }}</h1>
          <div style="width:30%; margin:25px auto;" class="col-4">
              <form action="/campgrounds/{{ campground._id }}/comments" method="POST" class="d-block">
                  <div class="form-group">
                      <input class="form-control" type="text" placeholder="comment" name="comment[text]">
                  </div>
                  <div class="form-group">
                      <button class="btn btn-lg btn-primary btn-block">Submit</button>
                  </div>
              </form>
              <a href="/campgrounds">Go back</a>
          </div>
      </div>
  </div>
</div>

{{> footer}}
